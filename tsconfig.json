{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "build",
        "webpack.config.js",
        "configuration",
        "graphql"
    ]
}